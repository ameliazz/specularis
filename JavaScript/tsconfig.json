{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"lib": ["ES6", "ESNext", "ESNext.BigInt"],
		"rootDir": "./src",
		"outDir": "./dist",
		"removeComments": true,
		"strict": true,
		"typeRoots": ["./src/@types/*.d", "./node_modules/@types"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"strictPropertyInitialization": false,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"],
			"@utils/*": ["utils/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["build", "node_modules", "package-lock.json", "package.json"]
}
